
{
	"globals": {
	    "jQuery": false,
	    "$": true
	},
	"plugins": [
		"react"
	],
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"env": {
	    "browser": true,
	    "es6": true,
	    "node": true
	},

	"ecmaFeatures": {
	    "arrowFunctions": true,
	    "modules": true,
		"jsx":true
	},
	"parserOptions": {
	    "ecmaVersion": 6,
	    "sourceType": "module"
	},
	"rules": {
	    "eqeqeq": 1,
	    "curly": 2,
	    "no-console": [2, {"allow": ["log", "warn", "error"] }],
	    "quotes": [2, "single"]
	}
}